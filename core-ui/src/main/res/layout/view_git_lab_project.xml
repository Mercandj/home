<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/git_lab_project_card_bg"
    tools:parentTag="android.widget.FrameLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/default_space"
        android:paddingTop="@dimen/default_space">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/view_git_lab_project_image"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="@dimen/default_space"
                    android:padding="2dp"
                    tools:src="@android:color/white" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/view_git_lab_project_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/default_space"
                    android:gravity="center_vertical"
                    android:textColor="@color/git_lab_project_title"
                    android:textSize="@dimen/text_size_xl"
                    tools:text="Project name" />

            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/view_git_lab_project_last_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="@dimen/default_space"
                android:gravity="top|end"
                android:textColor="@color/git_lab_project_last_activity"
                android:textSize="@dimen/text_size_xs"
                tools:text="53m ago" />

        </FrameLayout>

        <com.mercandalli.core_ui.gitlab.GitLabBuildRow
            android:id="@+id/view_git_lab_project_build_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <com.mercandalli.core_ui.gitlab.GitLabBuildRow
            android:id="@+id/view_git_lab_project_build_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp" />

        <com.mercandalli.core_ui.gitlab.GitLabBuildRow
            android:id="@+id/view_git_lab_project_build_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp" />

        <com.mercandalli.core_ui.gitlab.GitLabBuildRow
            android:id="@+id/view_git_lab_project_build_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp" />

    </LinearLayout>

</merge>