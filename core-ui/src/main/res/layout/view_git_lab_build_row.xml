<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_git_lab_project_build_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:background="@color/git_lab_project_card_bg"
    tools:parentTag="android.widget.LinearLayout">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/view_git_lab_project_build_pipeline_status"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingEnd="2dp"
        android:paddingStart="@dimen/default_space"
        android:src="@drawable/ic_check_circle_green_24dp"
        android:textColor="@color/git_lab_build_title"
        android:textSize="6sp"
        tools:text="canceled" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/view_git_lab_project_build_author_image"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/default_space"
        tools:src="@android:color/white" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/view_git_lab_project_build_author"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingEnd="2dp"
        android:paddingStart="6dp"
        android:textColor="@color/git_lab_build_title"
        android:textSize="@dimen/text_size_xs"
        tools:text="Jonathan" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/view_git_lab_project_build_commit_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/default_space"
        android:paddingStart="2dp"
        android:textColor="@color/git_lab_build_title"
        android:textSize="@dimen/text_size_xs"
        tools:text="Build name" />

</merge>